{% extends 'frontbase.html.twig' %}

{% block title %} {{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords }}!{% endblock %}
{% block description %} {{ data[0].description }}!{% endblock %}
{% block content %}
    <div id="wrapper" class="container">


    <section class="main-content">
        <div class="row">
            <div class="span9">
                <div class="row">
                    <div class="span4">
                        <a href="#" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="{{ asset('Uploads') }}/İmages/{{ data[0].image }}" style="width: 100%"></a>
                        {% for rs in images %}


                                    <li class="span1">
                                        <a href="{{ asset('Uploads') }}/İmages/{{ rs.image }}" style="width: 80px;height: 80px;" class="thumbnail" data-fancybox-group="group1"  title="Description 2"><img src="{{ asset('Uploads') }}/İmages/{{ rs.image }}" style="height: 100px; width: 100px" alt=""></a>
                                    </li>


                            {% endfor %}

                    </div>
                    <div class="span5">
                        <address>
                            <h3>{{ data[0].title }}</h3><br>

                        </address>
                        <h4><strong>Price:{{ data[0].sprice }}TL</strong></h4>
                    </div>
                    <div class="span5">
                        <form action="{{ path('shopcart_new') }}" method="post" class="form-inline">



                            <label class="control-label"><span>Alacağınız adet:</span></label>
                            <input type="number" name="shopcart[quantity]" class="span1" placeholder="Adet" max="{{ data[0].amount }}">
                            <input type="hidden"  name="shopcart[productid]" value="{{ data[0].id }}" max="{{ data[0].id }}">

                           <p></p>
                            <h4>{{ data[0].amount }} Adet stokta kalan</h4>
                            <input type="hidden" name="token" value="{{ csrf_token('add-item') }}">

                            <button class="btn btn-danger" style="" type="submit" >Sepete Ekle<i class=" icon-shopping-cart"></i></button>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="span9">
                        <ul class="nav nav-tabs" id="myTab">
                            <li class="active"><a href="#home">Description</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="home"> {{ data[0].description }} </div>
                            <div class="tab-pane" id="profile">
                                <table class="table table-striped shop_attributes">
                                    <tbody>
                                    <tr class="">
                                        <th>Size</th>
                                        <td>Large, Medium, Small, X-Large</td>
                                    </tr>
                                    <tr class="alt">
                                        <th>Colour</th>
                                        <td>Orange, Yellow</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>
    </div>
{% endblock %}