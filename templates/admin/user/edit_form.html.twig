{% extends 'adminbase.html.twig' %}

{% block title %}Üye Düzenleme{% endblock %}
{% block content %}
    <div id="page-wrapper">
        <div class="header">
            <h1 class="page-header">
                 Üye Düzenleme
            </h1>
            <div class="panel panel-default">

                <!-- /.panel-heading -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="card-title">
                                    <div class="title">Yeni Üye Düzenleme</div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <form class="form-horizontal"method="post">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Adı Soyadı</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="user[name]" value="{{ user.name }}" class="form-control" id="inputEmail3" placeholder="Adı Soyadı">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="email" name="user[email]"value="{{ user.email }}"class="form-control" id="inputEmail3" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                                        <div class="col-sm-10">
                                            <input type="password" name="user[password]"value="{{ user.password }}" class="form-control" id="inputPassword3" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Türü</label>
                                        <div class="col-sm-10">
                                            <select name="user[roles]" class="form-control">
                                                {% for item in user.roles %}
                                                <option selected>{{ item }}</option>
                                                {% endfor %}
                                                <option>ROLE_ADMIN</option>
                                                <option>ROLE_USER</option>
                                                <option>ROLE_POWER</option>
                                                <option>ROLE_MEMBER</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Aktif Durumu</label>
                                        <div class="col-sm-10">
                                            <select name="user[status]" class="form-control">
                                               <option> {{ user.status }}</option>
                                                <option>True</option>
                                                <option>False</option>

                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-offset-11 col-sm-1000">
                                            <button type="submit" class="btn btn-danger">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

{% endblock %}