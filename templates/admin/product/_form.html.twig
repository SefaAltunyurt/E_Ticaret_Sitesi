<div class="panel-body">
<form class="form-horizontal"method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">Kategorisi</label>
        <div class="col-sm-10">
            <select name="product[category_id]" class="form-control">

                {% if (catname) %}
                <option value="{{ product.categoryid }}"> {{ catname[0].title }}</option>
                {% endif %}

            {% for cat in catlist %}
                <option value="{{ cat.id }}">{{ cat.title }}</option>
            {% endfor %}

            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Title (Başlık)</label>
        <div class="col-sm-10">
            <input type="text" name="product[title]"value="{{ product.title }}"class="form-control"  placeholder="title">
        </div>
    </div>
    <div class="form-group">
        <label  class="col-sm-2 control-label">Keywords(Anahtar Kelimeler)</label>
        <div class="col-sm-10">
            <input type="text" name="product[keywords]"value="{{ product.keywords }}" class="form-control" id="inputPassword3" placeholder="keywords">
        </div>
    </div>
    <div class="form-group">
        <label  class="col-sm-2 control-label">Description(Kısa Açıklama)</label>
        <div class="col-sm-10">
            <input type="text" name="product[description]"value="{{ product.description }}" class="form-control" id="inputPassword3" placeholder="description">
        </div>
    </div>

    <div class="form-group">
        <label  class="col-sm-2 control-label">Alış Fiyatı</label>
        <div class="col-sm-10">
            <input type="text" name="product[price]"value="{{ product.price }}" class="form-control" id="inputPassword3" placeholder="description">
        </div>
    </div>

    <div class="form-group">
        <label  class="col-sm-2 control-label">Satış Fiyatı</label>
        <div class="col-sm-10">
            <input type="text" name="product[sprice]"value="{{ product.sprice }}" class="form-control" id="inputPassword3" placeholder="description">
        </div>
    </div>

    <div class="form-group">
        <label  class="col-sm-2 control-label">Miktar</label>
        <div class="col-sm-10">
            <input type="text" name="product[amount]"value="{{ product.amount }}" class="form-control" id="inputPassword3" placeholder="description">
        </div>
    </div>
    <div class="form-group">
        <label  class="col-sm-2 control-label">Detay</label>
        <div class="col-sm-10">
            <textarea id="detail" name="product[detail]"rows="10">{{ product.detail  }}</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Aktif Durumu</label>
        <div class="col-sm-10">
            <select name="product[status]" class="form-control">
            <option> {{ product.status }}</option>
            <option>True</option>
            <option selected>False</option>

            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-11 col-sm-1000">
            <button type="submit" class="btn btn-danger">Kaydet</button>
        </div>
    </div>
</form>
</div>
<script>
    ClassicEditor
        .create( document.querySelector( '#detail' ) )
        .catch( error => {
            console.error( error );
        } );
</script>