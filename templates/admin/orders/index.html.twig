{% extends 'adminbase.html.twig' %}

{% block title %}Ürün Listesi{% endblock %}
{% block content %}
    <div id="page-wrapper">
        <div class="header">
            <h1 class="page-header">
                Ürün Listesi


            </h1>
            <div class="panel panel-default">


                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive table-bordered">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Userid</th>
                                <th>Amount</th>
                                <th>Name</th>
                                <th>Adress</th>
                                <th>City</th>
                                <th>Phone</th>
                                <th>Shipinfo</th>
                                <th>Status</th>
                                <th>Note</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.userid }}</td>
                                    <td>{{ order.amount }}</td>
                                    <td>{{ order.name }}</td>
                                    <td>{{ order.adress }}</td>
                                    <td>{{ order.city }}</td>
                                    <td>{{ order.phone }}</td>
                                    <td>{{ order.shipinfo }}</td>
                                    <td>{{ order.status }}</td>
                                    <td>{{ order.note }}</td>
                                    <td>
                                        <a href="javascript:openWin('{{  path('admin_orders_show', {'id': order.id}) }}','','toolbar=no,location=no,directories=no,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                                            Göster </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

